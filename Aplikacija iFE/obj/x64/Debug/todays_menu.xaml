<Page
    x:Class="Aplikacija_iFE.todays_menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aplikacija_iFE"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:ConnectionId='1' x:Name="jedilnik" Title="Jedilnik">
            <PivotItem Header="mesni meni1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:ConnectionId='7' Text="Testni meni" Name="meso1"></TextBlock>
                    <!-- TU gre notri branje podatkov z interneta za meni 1-->
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="mesni meni2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:ConnectionId='6' Text="Testni meni" Name="meso2"></TextBlock>
                    <!-- TU gre notri branje podatkov z interneta za meni 1-->
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="mesni meni3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:ConnectionId='5' Text="Testni meni" Name="meso3"></TextBlock>
                    <!-- TU gre notri branje podatkov z interneta za meni 1-->
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="testenine, njoki, lazanje, rižote">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:ConnectionId='4' Text="Testni meni" Name="testenine"></TextBlock>
                    <!-- TU gre notri branje podatkov z interneta za meni 1-->
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="solata">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:ConnectionId='3' Text="Testni meni" Name="solata1"></TextBlock>
                    <!-- TU gre notri branje podatkov z interneta za meni 1-->
                  
                 </ScrollViewer>
            </PivotItem>
            <PivotItem Header="jed na žlico">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:ConnectionId='2' Text="Testni meni" Name="zlica"></TextBlock>
                   <!-- TU gre notri branje podatkov z interneta za meni 1-->
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

